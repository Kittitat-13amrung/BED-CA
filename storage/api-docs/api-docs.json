                        "$ref": "#/components/schemas/Channel"
                    },
                    "comments": {
                        "$ref": "#/components/schemas/Comment"
                    }
                },
                "type": "object"
            },
            "Channel": {
                "properties": {
                    "id": {
                        "description": "channel id",
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "description": "name of the channel",
                        "type": "string",
                        "example": "James"
                    },
                    "subscribers": {
                        "description": "number of subscribers",
                        "type": "integer",
                        "example": "1100"
                    },
                    "created_at": {
                        "description": "the date when the channel has been created",
                        "type": "string",
                        "format": "date",
                        "example": "2019-10-06"
                    },
                    "hasVideo": {
                        "description": "the amount of video",
                        "type": "integer",
                        "format": "integer",
                        "example": "100"
                    }
                },
                "type": "object"
            },
            "Comment": {
                "properties": {
                    "id": {
                        "description": "comment id",
                        "type": "integer",
                        "example": "1"
                    },
                    "text": {
                        "description": "comment texts",
                        "type": "text",
                        "example": "lorem ipsum"
                    },
                    "likes": {
                        "description": "number of likes",
                        "type": "integer",
                        "example": "1100"
                    },
                    "dislikes": {
                        "description": "number of dislikes",
                        "type": "integer",
                        "example": "90"
                    },
                    "commented_at": {
                        "description": "The date of the comment",
                        "type": "string",
                        "format": "string",
                        "example": "6 years ago"
                    },
                    "channel": {
                        "$ref": "#/components/schemas/Channel"
                    }
                },
                "type": "object"
            }
